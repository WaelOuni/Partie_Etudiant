<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myprojectetudiant.ResultatTest"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/resulttest" />

            <TextView
                android:id="@+id/resultTestTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Résultat"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.53" >

            <EditText
                android:id="@+id/seaResultInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="33dp"
                android:ems="10"
                android:hint="Séance :" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/resultBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/matResultInput"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="39dp"
                android:text="Afficher résultat" />

            <DatePicker
                android:id="@+id/datePicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/matResultInput"
                android:layout_below="@+id/seaResultInput"
                android:layout_marginTop="28dp" />

            <EditText
                android:id="@+id/matResultInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/seaResultInput"
                android:layout_below="@+id/datePicker1"
                android:layout_marginTop="31dp"
                android:ems="10"
                android:hint="Matière :" />

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>

