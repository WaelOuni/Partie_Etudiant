<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rnu.iit.waelgroup.student" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".QuickPrefsActivity" android:label="@string/app_name"/>
        <activity android:name=".ThemePrefsActivity" android:label="@string/app_name"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateHidden" >
            <category android:name="android.intent.category.LAUNCHER" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".EspaceEtudiant"
            android:label="@string/title_activity_espace_etudiant" >
        </activity>
        <activity
            android:name=".RegisterEtudiant"
            android:label="@string/title_activity_register_etudiant" >
        </activity>
        <activity
            android:name=".ConsultProfile"
            android:label="@string/title_activity_consult_profile" >
        </activity>
        <activity
            android:name=".ListCourses"
            android:label="@string/title_activity_list_courses" >
        </activity>

        <provider
            android:name=".myCustomProvider"
            android:authorities="rnu.iit.waelgroup.student.myCustomProvider" >
        </provider>

        <activity
            android:name=".ShowSettingsActivity"
            android:label="@string/title_activity_show_settings" >
        </activity>
    </application>

</manifest>
